#!/usr/bin/env node
var eibd = require('../main'),
    tools = require('../tools');
/**
 * groupwrite
 * send a group write telegram to a group address (for values with more than 6 bit width)
 */
function groupwrite(opts, gad, value, callback) {
  
  var conn = eibd();

  var address = tools.str2addr(gad);

  conn.socketRemote(opts, function() {
    conn.openTGroup(address, 1, function (err) {

      if(err) {
        callback(err);
      } else {
        var data = new Array(3);
        data[0] = 0;
        data[1] = 0x80; 
        data[2] = (0xff & value);
      
        conn.sendAPDU(data, callback);
      }

    });
  });
}
var host = process.argv[2];
var port = process.argv[3];
var gad = process.argv[4];
var value = process.argv[5];

if(!host || !port) {
  console.error('[ERROR] No hostname or port');
} else if(!gad) {
  console.error('[ERROR] No gad given');
} else if(!value) {
  console.error('[ERROR] No value given');
} else {
  groupwrite({ host: host, port: port}, gad, value, function(err) {
    if(err) {
      console.error(err);
    } 
  });
}
